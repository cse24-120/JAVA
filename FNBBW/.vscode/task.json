{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "javac",
      "args": [
        "--module-path", "javafx/lib",
        "--add-modules", "javafx.controls,javafx.fxml",
        "-d", "bin",
        "src/app/*.java",
        "src/controllers/*.java",
        "src/model/*.java",
        "src/repository/*.java",
        "src/sessions/*.java",
        "src/utils/*.java",
        "src/views/*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}